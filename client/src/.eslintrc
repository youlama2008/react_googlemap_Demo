{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "jest": true
    },
    "plugins": [
        "react",
        "react-hooks"
    ],
    "rules": {
        "no-invalid-this": 0,
        "max-len": [1, 80, 2, {
            "ignoreComments": true,
            "ignoreTemplateLiterals": true
        }],
        "no-console": "off",
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn"
    },
    "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:prettier/recommended"]
}